html
	font-size 15px
	font-family typeface-primary
	
body, p
	font-size 1.2rem

.unselectable
	-moz-user-select: none;
	-webkit-user-select: none;
	-ms-user-select: none;

p {
	line-height 150%
	margin -.5em 0 1em 0
	text-align left
	cursor: default;
}
a {
	text-decoration: none
	color color-black;
}	
a:hover {
	border-bottom: 1px solid black;
}
a.NoLine:hover {
	border: none;
}
h1,h2,h3,h4,h5,h6 {
	margin 0 0
	padding: 0 0
	font-family: typeface-secondary
	font-weight: normal
	line-height 130%
	position relative
	z-index 9999
	cursor: default;
	color: color-black;
}
h1 {
	font-size: 90px;
	text-transform: uppercase;
	font-style: italic;
	font-weight: bold;
}
@media laptop {
	h1 {
		font-size: 5.5vw;
	}
}
h1 a {
	border-bottom: 1px solid black;
	color: color-black;
}
h2 {
	font-size: 30px;
	font-weight: bold;
}
button {
	border: 3px solid black;
	box-shadow: 3px 3px 0px 0px #000;
	padding: 15px;
	background: transparent;
	font-family: typeface-secondary;
	font-style: italic;
	font-weight: bold;
	position: relative;
	cursor: pointer;
}
button:hover {
	top: 3px;
	left: 3px;
	box-shadow: none;
	background: black;
	color: white;
}
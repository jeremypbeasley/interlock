html
  min-height 100%

*
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)  
  -webkit-font-smoothing antialiased
  font-smoothing antialiased
  box-sizing border-box

body
  height 100%
  overflow-y auto
  overflow-x hidden
  margin 0
  background #f2f2f2
  padding-bottom 10vw
  
.hidden
	display none
	opacity 0
 
.Logo {
  position: fixed;
  left: 0px;
  top: unit9;
  transform: rotate(-90deg);
  font-weight: bold;
} 
.GlobalNav {
  position: absolute;
  top: unit4;
  left: unit4;
}
.GlobalNav ul, li {
  list-style: none;
  padding: 0;
  margin: 0;
  font-family: typeface-secondary;
  font-size: 1rem;
}
.GlobalNav ul li {
  display: inline-block;
  margin-right: unit2;
}
@media laptop {
  .GlobalNav {
    left: 7vw;
  }
}
.ColumnLeft {
  margin: unit4;
  width: 100%;  
}
@media laptop {
  .ColumnLeft {
    margin: 7vw;
    width: 50%;
  }
}
.Intro {
  min-height: calc(100vh - unit4);
  position: relative;
}
@media laptop {
  .Intro {
    min-height: calc(100vh - 7vw);
    width: 60%;
  }
}
.Intro h1 {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
code {
  width: 120%;
  height: 400px;
  display: block;
  background: black;
}